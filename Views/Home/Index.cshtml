@{
    ViewData["Title"] = "Welcum";
}

<div class="text-center">
    <h1 class="display-4">Hello Writer 👋🏻</h1>
    <p>Let's write some cwgrpahs, shall we?! 😏</p>
    
    <form asp-action="Create" asp-controller="Post" method="post" class="p-4">
        <div class="form-group mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" id="title" name="title" class="form-control" required>
        </div>
        <div class="form-group mb-3">
            <label for="author" class="form-label">Author:</label>
            <input type="text" id="author" name="author" class="form-control" required>
        </div>
        <div class="form-group mb-3">
            <label for="body" class="form-label">Body:</label>
            <textarea id="body" name="body" class="form-control" rows="4" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
    </form>
</div>